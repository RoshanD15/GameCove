{
  "compilerOptions": {
    /* === File Layout === */
    "rootDir": "src",
    "outDir": "dist",

    /* === Environment Settings === */
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* === Type Definitions === */
    "lib": ["ESNext"],
    "types": ["node"],

    /* === Build Options === */
    "sourceMap": true,
    "declaration": false,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "prisma"],
  "exclude": ["node_modules", "dist"]
}
