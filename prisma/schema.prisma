datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
}

model Game {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String
  priceCents  Int
  coverUrl    String?
  createdAt   DateTime @default(now())
}
