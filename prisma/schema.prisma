// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id String @id @default(cuid())
  email String @unique
  name String?
  password String
  createdAt DateTime @default(now())
  games Game[]
  activity UserActivity[] @relation("UserActivities")
}

model Game {
  id String @id @default(cuid())
  title String
  slug String @unique
  description String
  priceCents Int
  coverUrl String?
  createdAt DateTime @default(now())
  userId String
  user User @relation(fields: [userId], references: [id])
  activity    UserActivity[] @relation("GameActivities")
  @@index([userId])

}

model UserActivity {
  id String @id @default(cuid())
  userId String
  gameId String
  type String // "VIEW" | "CLICK" | "PURCHASE"
  createdAt DateTime @default(now())

  user User @relation("UserActivities", fields: [userId], references: [id])
  game Game @relation("GameActivities", fields: [gameId], references: [id])

  @@index([userId])
  @@index([gameId])
}